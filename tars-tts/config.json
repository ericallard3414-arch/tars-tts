{
  "name": "TARS TTS (Piper + FFmpeg)",
  "version": "1.0.5",
  "slug": "tars-tts",
  "description": "Generate TARS-style TTS audio server-side using Piper and FFmpeg filtering.",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "ingress": false,

  "ports": {
    "8000/tcp": 8000
  },

  "map": [
    "addon_config:rw",
    "media:rw"
  ],

  "environment": {
    "VOICE": "{voice}",
    "LENGTH_SCALE": "{length_scale}",
    "NOISE_SCALE": "{noise_scale}",
    "CADENCE": "{cadence}"
  },

  "options": {
    "voice": "en_US-ryan-medium",
    "length_scale": 1.1,
    "noise_scale": 0.45,
    "cadence": 0.8
  },

  "schema": {
    "voice": "str",
    "length_scale": "float",
    "noise_scale": "float",
    "cadence": "float"
  }
}




