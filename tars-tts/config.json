{
  "name": "TARS TTS (Piper + FFmpeg)",
  "version": "1.0.10",
  "slug": "tars-tts",
  "description": "Generate TARS-style TTS audio server-side using Piper + FFmpeg filters.",
  "arch": ["aarch64", "amd64"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "ingress": false,
  "ports": {
    "8000/tcp": 8000
  },
  "map": ["share:rw"],
  "options": {
    "voice": "en_US-ryan-medium",
    "length_scale": 1.1,
    "noise_scale": 0.45,
    "grit": 0.04,
    "lowpass": 3000
    "pitch": 0.92
  },
  "schema": {
    "voice": "str",
    "length_scale": "float",
    "noise_scale": "float",
    "grit": "float",
    "lowpass": "int"
    "pitch": "float"
  }
}


